{
  "name": "graphql-auto-requester",
  "version": "0.2.1",
  "description": "An automatic graphql request builder based on used fields",
  "main": "lib/index.js",
  "dependencies": {
    "deepmerge": "^4.2.2",
    "graphql-result-proxy": "^0.1.2",
    "json-hash": "^1.2.0"
  },
  "peerDependencies": {
    "graphql": "^14.5.0 || ^15"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-typescript": "^7.8.3",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.0",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "graphql": "^14.6.0",
    "jest": "^25.1.0",
    "standardx": "^5.0.0",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "build": "tsc --declaration",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest src/.*\\.test\\.ts",
    "test:integration": "jest test/integration/.*\\.test\\.ts",
    "lint": "standardx **/*.ts **/**/*.ts",
    "prepare": "npm run build"
  },
  "author": "Oliver Wright <meiamsome@meiamso.me>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/meiamsome/graphql-auto-requester.git"
  },
  "eslintConfig": {
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "standardx": {
    "env": [
      "jest"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  }
}
